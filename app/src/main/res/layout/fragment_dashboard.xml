<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:node="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/info_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/i"
            android:gravity="center"
            android:layout_gravity="top"/>
    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_completed_tasks" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"/>
    <TextView
        android:id="@+id/checked_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tasks_completed"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_checked"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <com.example.mankind.node_progress.NodeProgressView
        android:id="@+id/pb"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        node:node_bg="@drawable/rb_nomal"
        node:node_num="5"
        node:node_progress_bg="@drawable/rb_checked"
        node:node_progresscolor="#0a72da"
        />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_green_bg"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Undo"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_green_bg"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/congratulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/fui_bgEmail"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/congratulation_you_have_already_completed_all_the_tasks" />

</LinearLayout>